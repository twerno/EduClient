<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   minWidth="955" minHeight="600" 
			   xmlns:loginPage="pl.twerno.eduClient.panels.loginPage.*"
			   creationComplete="application1_creationCompleteHandler(event)" 
			   currentState="LoginState" 
			   xmlns:components="pl.twerno.eduClient.components.*" 
			   xmlns:adminPanel="pl.twerno.component.common.adminPanel.*" 
			   xmlns:admin="pl.twerno.eduClient.panels.admin.*" xmlns:panels="pl.twerno.eduClient.panels.*">
	<fx:Style source="style.css"/>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			import net.twerno.eduClient.consts.Const;
			
			import pl.twerno.eduClient.common.Env.Env;
			import pl.twerno.eduClient.panels.loginPage.LoginEvent;
			
			private var env:Env = Env.env;

			protected function application1_creationCompleteHandler(event:FlexEvent):void {
				env.addEventListener(LoginEvent.LOGGED_IN,  afterLoggedIn);
				env.addEventListener(LoginEvent.LOGGED_OUT, afterLoggedOut);
			}
			
			protected function afterLoggedIn(info:*):void {
				if (env.account.roles.contains(Const.ROLE_ADMIN)) {
					currentState = 'AdminState';	
				} else if (env.account.roles.contains(Const.ROLE_NAUCZYCIEL)) {
					currentState = 'NauczycielState';
				} else if (env.account.roles.contains(Const.ROLE_UCZEN)) {
					currentState = 'UczenState';
				}
			}

			protected function afterLoggedOut(info:*):void {
				currentState = 'LoginState';
			}

		]]>
	</fx:Script>
	<s:states>
		<s:State name="MainState"/>
		<s:State name="LoginState"/>
		<s:State name="AdminState"/>
		<s:State name="NauczycielState"/>
		<s:State name="UczenState"/>
		<s:State name="RodzicState"/>
	</s:states>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<components:Background/>
	<loginPage:LoginRegisterForm id='loginForm'
		includeIn="LoginState" horizontalCenter="0" verticalCenter="0" >
	</loginPage:LoginRegisterForm>
	<panels:TitleBar enabled.LoginState="false" x="72" y="249">
	</panels:TitleBar>
	<admin:AdminPanel includeIn="AdminState" left="10" top="33" right="10" bottom="10">
	</admin:AdminPanel>
</s:Application>
