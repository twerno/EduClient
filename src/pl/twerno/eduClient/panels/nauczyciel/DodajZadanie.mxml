<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="250" height="140">
	<fx:Script>
		<![CDATA[
			import net.twerno.eduClient.consts.Const;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Panel width="250" height="140" left="0" top="0" title="Dodaj zadanie typu">
		<mx:Form left="0" top="0" right="0" bottom="0">
			<mx:FormItem label="Typ zadania" width="100%">
				<s:DropDownList id='typZadania' width="100%" dataProvider="{Const.TYP_ZADANIA_KONWERTER}"
								change="typZadania_changeHandler(event)"/>
			</mx:FormItem>
			<mx:FormItem width="100%">
				<s:Button label="Dodaj" skinClass="pl.twerno.commLib.skins.button.AcceptButtonSkin" width="100%"/>
			</mx:FormItem>
			<mx:FormItem width="100%">
				<s:Button label="Anuluj" width="100%" skinClass="pl.twerno.commLib.skins.button.CanceButtonSkin"/>
			</mx:FormItem>
		</mx:Form>
	</s:Panel>
</s:Group>
